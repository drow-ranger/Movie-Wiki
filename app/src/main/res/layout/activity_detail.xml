<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".DetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/iv_movie_backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/movie_backdrop"
                    android:scaleType="centerCrop" />

                <View
                    android:id="@+id/movie_background"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:alpha="0.8"
                    android:background="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/iv_movie_poster"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/content_margin"
                    android:layout_marginTop="200dp"
                    android:contentDescription="@string/movie_poster"
                    android:scaleType="centerCrop" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_movie_title"
                    style="@style/TextTitle"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/content_margin"
                    android:layout_marginTop="255dp"
                    android:layout_toEndOf="@+id/iv_movie_poster"
                    android:layout_toRightOf="@+id/iv_movie_poster"
                    android:maxLines="2"
                    tools:text="@string/movie_title" />

                <LinearLayout
                    android:id="@+id/movie_rating_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_movie_title"
                    android:layout_marginStart="@dimen/content_margin"
                    android:layout_marginTop="@dimen/grid_item_margin"
                    android:layout_toEndOf="@+id/iv_movie_poster"
                    android:layout_toRightOf="@+id/iv_movie_poster"
                    android:orientation="vertical">

                    <com.willy.ratingbar.ScaleRatingBar
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/rb_movie_vote_average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srb_numStars="10"
                        app:srb_starWidth="15dp"
                        app:srb_starHeight="15dp"
                        app:srb_starPadding="1dp"
                        app:srb_stepSize="0.5"
                        app:srb_isIndicator="false"
                        app:srb_clickable="false"
                        app:srb_scrollable="false"
                        app:srb_clearRatingEnabled="false"
                        app:srb_drawableEmpty="@drawable/ic_star_empty"
                        app:srb_drawableFilled="@drawable/ic_star_filled">
                    </com.willy.ratingbar.ScaleRatingBar>


                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tv_movie_vote_count"
                        style="@style/TextBody"
                        android:layout_width="wrap_content"
                        android:layout_gravity="start"
                        android:text="@string/vote_count" />

                </LinearLayout>

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_movie_popularity"
                    style="@style/TextBody"
                    android:layout_below="@+id/movie_rating_layout"
                    android:layout_marginStart="@dimen/content_margin"
                    android:layout_toEndOf="@+id/iv_movie_poster"
                    android:layout_toRightOf="@+id/iv_movie_poster"
                    android:maxLines="2"
                    android:text="@string/popularity" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_movie_release_date"
                    style="@style/TextDate"
                    android:layout_below="@+id/tv_movie_popularity"
                    android:layout_marginStart="@dimen/content_margin"
                    android:layout_toEndOf="@+id/iv_movie_poster"
                    android:layout_toRightOf="@+id/iv_movie_poster"
                    android:maxLines="2"
                    android:text="@string/release_date" />

            </RelativeLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_detail" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>